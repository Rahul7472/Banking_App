            <FontAwesomeIconView glyphName="BANK" size="30" />
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="LUBRICANTS" />
         </children>
      </VBox>
      <VBox layoutX="226.0" layoutY="14.0" prefHeight="371.0" prefWidth="349.0" styleClass="login_form_container" AnchorPane.leftAnchor="226.0" AnchorPane.topAnchor="14.0">
         <children>
            <Label id="choice-prompt_text" text="Choose your account type:" />
            <ChoiceBox fx:id="acc_selector" prefWidth="90.0" styleClass="account_selector" />
            <Label fx:id="email_address_lbl" text="Email Address:" />
            <TextField fx:id="email_address_field" styleClass="input_field" />
            <Label fx:id="password_lbl" text="Password:" />
            <PasswordField fx:id="password_field" styleClass="input_field" />
            <Button fx:id="login_btn" mnemonicParsing="false" text="Log In
" />
            <Label fx:id="error_lbl" styleClass="error_lbl" text="" />
         </children>
      </VBox>
   </children>
